<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="MyTheme" parent="Theme.AppCompat.Light.NoActionBar">
  <item name="colorPrimary">#39C5D6</item>
  <item name="drawerArrowStyle">@style/MyDrawerArrowStyle</item>
  </style>
  <style name="MyDrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
    <item name="color">#F5F5F5</item>
    <item name="spinBars">false</item>
  </style>
  <style name="DetailStyle" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">#39C5D6</item>
    <item name="spinBars">false</item>
  </style>
  <style name="Base.Theme.Splash" parent ="Theme.AppCompat.Light.NoActionBar">
    <item name="android:windowBackground">@drawable/Splash_bg</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowFullscreen">true</item>
  </style>
  <style name="Base.Theme.Login" parent ="Theme.AppCompat.Light.NoActionBar">
    <item name="android:windowBackground">@drawable/Login_bg</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowFullscreen">true</item>
  </style>
  <style name="login_textedit">
    <item name="android:textColor">#000000</item>
    <item name="android:background">#FFFFFF</item>
    <item name="android:layout_marginTop">5dp</item>
    <item name="android:layout_marginBottom">10dp</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">40dp</item>
    <item name="android:paddingRight">10dp</item>
    <item name="android:paddingLeft">10dp</item>
    <item name="android:singleLine">true</item>
    <item name="android:autoText">false</item>
  </style>
  <style name="login_button">
    <item name="android:textColor">#FFFFFF</item>
    <item name="android:background">#39C5D6</item>
    <item name="android:textStyle">bold</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">40dp</item>
    <item name="android:layout_marginTop">10dp</item>
    <item name="android:layout_marginLeft">30dp</item>
    <item name="android:layout_marginRight">30dp</item>
    <item name="android:layout_marginBottom">10dp</item>
  </style>
  <style name="left_drawer">
    <item name="android:layout_width">240dp</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_gravity">start</item>
    <item name="android:choiceMode">singleChoice</item>
    <item name="android:divider">#000000</item>
    <item name="android:dividerHeight">2dp</item>
    <item name="android:background">#F2F2F2</item>
  </style>
  <style name="VacationType">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:lineSpacingExtra">3dp</item>
    <item name="android:paddingLeft">10dp</item>
    <item name="android:paddingTop">5dp</item>
    <item name="android:textColor">#AAAAAA</item>
    <item name="android:textSize">18dp</item>
    <item name="android:fontFamily">sans</item>
  </style>
  <style name="VacationStatus">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:lineSpacingExtra">3dp</item>
    <item name="android:paddingLeft">10dp</item>
    <item name="android:paddingTop">5dp</item>
    <item name="android:textColor">#AAAAAA</item>
    <item name="android:textSize">22dp</item>
    <item name="android:fontFamily">sans</item>
  </style>
  <style name="VacationDate">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:paddingLeft">10dp</item>
    <item name="android:paddingTop">40dp</item>
    <item name="android:background">#FFFFFF</item>
    <item name="android:textColor">#39C5D6</item>
    <item name="android:textSize">22dp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:fontFamily">sans</item>
  </style>
  <style name="ProfileImage">
    <item name="android:layout_width">70dp</item>
    <item name="android:layout_height">70dp</item>
  </style>
  <style name="button">
    <item name="android:textColor">#FFFFFF</item>
    <item name="android:background">#39C5D6</item>
    <item name="android:textStyle">bold</item>
    <item name="android:layout_width">40dp</item>
    <item name="android:layout_marginLeft">30dp</item>
    <item name="android:layout_marginRight">30dp</item>
    <item name="android:layout_height">match_parent</item>
  </style>
</resources>
